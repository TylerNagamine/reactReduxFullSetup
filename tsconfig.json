{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "preserve",
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "lib": [ "es6", "dom" ],
    "paths": {
      "react": [ "./node_modules/@types/react/index" ]
    }
  },
  "compileOnSave": false,
  "exclude": [
      "bin",
      "node_modules"
  ]
}
